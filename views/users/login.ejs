<% layout("/layouts/boilerplate")%>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg">
        <div class="card-header bg-success text-white text-center">
          <h3 class="mb-0">
            <i class="fas fa-sign-in-alt me-2"></i>
            Welcome Back
          </h3>
        </div>
        <div class="card-body p-4">
          <!-- Google OAuth Button -->
          <div class="text-center mb-4">
            <a href="/auth/google" class="btn btn-outline-danger btn-lg w-100 mb-3">
              <i class="fab fa-google me-2"></i>
              Continue with Google
            </a>
            <div class="text-muted">
              <small>or login with email</small>
            </div>
          </div>

          <form action="/login" method="post" id="loginForm" class="needs-validation" novalidate>
            <div class="mb-3">
              <label for="email" class="form-label">
                <i class="fas fa-envelope me-2"></i>
                Email
              </label>
              <input
                name="email"
                id="email"
                class="form-control"
                required
                type="email"
                placeholder="Enter your email"
              />
              <div class="invalid-feedback">
                Please enter a valid email address.
              </div>
            </div>
            
            <div class="mb-3">
              <label for="password" class="form-label">
                <i class="fas fa-lock me-2"></i>
                Password
              </label>
              <input
                name="password"
                id="password"
                class="form-control"
                required
                type="password"
                placeholder="Enter your password"
              />
              <div class="invalid-feedback">
                Please enter your password.
              </div>
            </div>
            
            <div class="d-grid gap-2">
              <button class="btn btn-success btn-lg" type="submit">
                <i class="fas fa-sign-in-alt me-2"></i>
                Login
              </button>
              <a href="/signup" class="btn btn-outline-secondary">
                <i class="fas fa-user-plus me-2"></i>
                Don't have an account? Sign up
              </a>
            </div>
          </form>
          
          <div class="text-center mt-3">
            <a href="/forgot-password" class="text-decoration-none">
              <i class="fas fa-key me-2"></i>
              Forgot Password?
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// Form validation
(function() {
  'use strict';
  window.addEventListener('load', function() {
    var forms = document.getElementsByClassName('needs-validation');
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();

// Debug form submission
document.getElementById('loginForm').addEventListener('submit', function(e) {
  console.log('Form submitted');
  console.log('Email:', document.getElementById('email').value);
  console.log('Password:', document.getElementById('password').value);
  
  // Don't prevent default - let the form submit normally
});
</script>
